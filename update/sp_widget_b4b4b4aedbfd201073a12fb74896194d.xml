        <client_script><![CDATA[function() {
  /* widget controller */
	var c = this;
	var flg = 0;

	c.addDash = function(){
		if(flg==0 && c.data.connCompCode.length==7){
			c.data.connCompCode += '-';
			flg = 1;
		}
		else if(flg==1 && c.data.connCompCode.length<=6){
			flg = 0;
		}
	}
}]]></client_script>
